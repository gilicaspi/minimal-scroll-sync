{
  "name": "minimal-scroll-sync",
  "version": "0.0.1",
  "description": "Tiny React scroll-sync hooks & emitter",
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs",
    "dev": "tsup src/index.ts --dts --format esm,cjs --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gilicaspi/scroll-sync.git"
  },
  "keywords": [
    "react",
    "scroll",
    "hooks",
    "sync"
  ],
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18"
  },
  "bugs": {
    "url": "https://github.com/gilicaspi/minimal-scroll-sync/issues"
  },
  "homepage": "https://github.com/gilicaspi/minimal-scroll-sync#readme",
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.3",
    "eslint": "^9.26.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3"
  }
}
